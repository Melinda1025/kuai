<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:hc="https://handyorg.github.io/handycontrol"
                    xmlns:o="http://schemas.microsoft.com/winfx/2006/xaml/presentation/options">
    <DropShadowEffect x:Key="MainEffect"
                      BlurRadius="20"
                      RenderingBias="Performance"
                      ShadowDepth="0"
                      Color="{DynamicResource MainColor}" />
    <hc:BrightnessEffect x:Key="GrowEffect"
                         o:Freeze="True"
                         Brightness="2"
                         RenderOptions.BitmapScalingMode="LowQuality" />
    <hc:BrightnessEffect x:Key="GrowEffect.Brighter"
                         o:Freeze="True"
                         Brightness="5"
                         RenderOptions.BitmapScalingMode="LowQuality" />
    <BlurEffect x:Key="BlurEffect.Small"
                o:Freeze="True"
                Radius="2"
                RenderingBias="Performance" />
    <BlurEffect x:Key="BlurEffect"
                o:Freeze="True"
                Radius="10"
                RenderingBias="Performance" />
    <BlurEffect x:Key="BlurEffect.Greater"
                o:Freeze="True"
                Radius="20"
                RenderingBias="Performance" />
</ResourceDictionary>