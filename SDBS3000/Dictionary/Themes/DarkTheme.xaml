<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:o="http://schemas.microsoft.com/winfx/2006/xaml/presentation/options">
    <ImageBrush x:Key="Logo"
                o:Freeze="True"
                ImageSource="../../Assets/Images/Logo/LogoDark.png"
                Stretch="None" />


    <Color x:Key="MainColor" o:Freeze="True">#00B0FF</Color>
    <SolidColorBrush x:Key="MainBrush"
                     o:Freeze="True"
                     Color="{StaticResource MainColor}" />


    <DropShadowEffect x:Key="MainEffect"
                      o:Freeze="True"
                      BlurRadius="100"
                      RenderingBias="Performance"
                      ShadowDepth="100"
                      Color="{StaticResource MainColor}" />
</ResourceDictionary>