<UserControl x:Class="SDBS3000.Controls.JumpingCircle"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:hc="https://handyorg.github.io/handycontrol"
             xmlns:local="clr-namespace:SDBS3000.Controls"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:oxy="http://oxyplot.org/skiawpf"
             MinWidth="200"
             MinHeight="200"
             d:DesignHeight="100"
             d:DesignWidth="100"
             mc:Ignorable="d">
    <Viewbox>
        <hc:SimplePanel Width="200" Height="200">
            <Ellipse Name="OuterEllipse"
                     Margin="-2"
                     Effect="{StaticResource BlurEffect}"
                     Fill="#3300b4ff" />
            <oxy:PlotView Name="PlotView"
                          Margin="-20"
                          Background="Transparent" />
            <Ellipse Name="StdEllipse"
                     Fill="#3300b4ff"
                     Stroke="#00b4ff"
                     StrokeThickness="1.5" />
            <Ellipse Name="InnerEllipse"
                     Margin="3"
                     Stroke="#00b4ff"
                     StrokeDashArray="3" />
        </hc:SimplePanel>
    </Viewbox>
</UserControl>
