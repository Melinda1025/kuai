            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto" />
                <ColumnDefinition Width="auto" />
                <ColumnDefinition />
                <ColumnDefinition Width="auto" />
                <ColumnDefinition Width="auto" />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>

            <Border Width="26"
                    Height="30"
                    Margin="30,0,0,0"
                    Background="{StaticResource StatusArrow}" />
            <TextBlock Grid.Column="1"
                       Margin="5,0,0,0"
                       VerticalAlignment="Center"
                       Effect="{StaticResource MainEffect}"
                       FontSize="20"
                       FontWeight="Bold"
                       Foreground="White"
                       Text="基础信息:" />
            <Border Grid.Column="2"
                    Margin="20,12,30,12"
                    Background="{StaticResource StatusBrush}">
                <UniformGrid Rows="1">
                    <hc:SimpleStackPanel HorizontalAlignment="Center"
                                         VerticalAlignment="Center"
                                         Orientation="Horizontal">
                        <TextBlock Margin="0,0,10,0"
                                   FontSize="18"
                                   Foreground="White"
                                   Text="转子名称:" />
                        <controls:GrowText FontSize="18" Text="{Binding Rotor.Name, Mode=OneWay, FallbackValue=测量转子}" />
                    </hc:SimpleStackPanel>
                    <hc:SimpleStackPanel HorizontalAlignment="Center"
                                         VerticalAlignment="Center"
                                         Orientation="Horizontal">
                        <TextBlock Margin="0,0,10,0"
                                   FontSize="18"
                                   Foreground="White"
                                   Text="测量转速:" />
                        <controls:GrowText FontSize="18" Text="{Binding Rotor.Speed, Mode=OneWay, FallbackValue=1000 rpm, StringFormat={}{0:f0 rpm}}" />
                    </hc:SimpleStackPanel>
                    <hc:SimpleStackPanel HorizontalAlignment="Center"
                                         VerticalAlignment="Center"
                                         Orientation="Horizontal">
                        <TextBlock Margin="0,0,10,0"
                                   FontSize="18"
                                   Foreground="White"
                                   Text="PLC状态:" />
                        <controls:GrowText MinWidth="50"
                                           FontSize="18"
                                           Text="{Binding PlcStatus, Mode=OneWay, FallbackValue=离线}" />
                    </hc:SimpleStackPanel>
                </UniformGrid>
            </Border>

            <Border Grid.Column="3"
                    Width="26"
                    Height="30"
                    Margin="10,0,0,0"
                    Background="{StaticResource StatusArrow}" />
            <TextBlock Grid.Column="4"
                       Margin="5,0,0,0"
                       VerticalAlignment="Center"
                       Effect="{StaticResource MainEffect}"
                       FontSize="20"
                       FontWeight="Bold"
                       Foreground="White"
                       Text="统计信息:" />
            <Border Grid.Column="5"
                    Margin="20,12"
                    Background="{StaticResource StatusBrush}">
                <UniformGrid Rows="1">
                    <hc:SimpleStackPanel HorizontalAlignment="Center"
                                         VerticalAlignment="Center"
                                         Orientation="Horizontal">
                        <TextBlock Margin="0,0,10,0"
                                   FontSize="18"
                                   Foreground="White"
                                   Text="合格率:" />
                        <controls:GrowText FontSize="18" Text="50%" />
                    </hc:SimpleStackPanel>
                    <hc:SimpleStackPanel HorizontalAlignment="Center"
                                         VerticalAlignment="Center"
                                         Orientation="Horizontal">
                        <TextBlock Margin="0,0,10,0"
                                   FontSize="18"
                                   Foreground="White"
                                   Text="OK数:" />
                        <controls:GrowText FontSize="18" Text="100" />
                    </hc:SimpleStackPanel>
                    <hc:SimpleStackPanel HorizontalAlignment="Center"
                                         VerticalAlignment="Center"
                                         Orientation="Horizontal">
                        <TextBlock Margin="0,0,10,0"
                                   FontSize="18"
                                   Foreground="White"
                                   Text="NG数:" />
                        <controls:GrowText MinWidth="50"
                                           FontSize="18"
                                           Text="100" />
                    </hc:SimpleStackPanel>
                    <hc:SimpleStackPanel HorizontalAlignment="Center"
                                         VerticalAlignment="Center"
                                         Orientation="Horizontal">
                        <TextBlock Margin="0,0,10,0"
                                   FontSize="18"
                                   Foreground="White"
                                   Text="合计数:" />
                        <controls:GrowText MinWidth="50"
                                           FontSize="18"
                                           Text="200" />
                    </hc:SimpleStackPanel>
                </UniformGrid>
            </Border>
        </Grid>
    </Grid>
</UserControl>
