<UserControl x:Class="SDBS3000.Views.MeasureView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:controls="clr-namespace:SDBS3000.Controls"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:hc="https://handyorg.github.io/handycontrol"
             xmlns:local="clr-namespace:SDBS3000.Views"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="clr-namespace:SDBS3000.ViewModels"
             Width="1920"
             Height="870"
             d:DataContext="{d:DesignInstance vm:MeasureViewModel}"
             mc:Ignorable="d">
    <hc:Interaction.Triggers>
        <hc:EventTrigger EventName="Loaded">
            <hc:InvokeCommandAction Command="{Binding LoadedCommand}" />
        </hc:EventTrigger>
    </hc:Interaction.Triggers>
    <Grid Margin="50,0">
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="85" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>

        <!--  动平衡  -->
        <Border Height="60"
                Margin="20"
                VerticalAlignment="Top"
                Background="{StaticResource TitleBd}"
                BorderThickness="0"
                Style="{x:Null}">
            <TextBlock Margin="27,2"
                       FontSize="20"
                       FontWeight="Bold"
                       Foreground="White"
                       Text="动平衡" />
        </Border>
        <Grid Margin="20,100,20,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="1.2*" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>

            <controls:GrowText Margin="16.3,5,0,0"
                               HorizontalAlignment="Left"
                               VerticalAlignment="Top"
                               FontFamily="{StaticResource IconFont}"
                               FontSize="30"
                               Text="{Binding AddOrRemoveInfo.LeftAddOrRemove, Converter={StaticResource Boolean2AddRemoveIconConverter}, Mode=OneWay}" />
            <controls:GrowText Grid.Column="1"
                               Margin="0,5,16.3,0"
                               HorizontalAlignment="Right"
                               VerticalAlignment="Top"
                               FontFamily="{StaticResource IconFont}"
                               FontSize="30"
                               Text="{Binding AddOrRemoveInfo.RightAddOrRemove, Converter={StaticResource Boolean2AddRemoveIconConverter}, Mode=OneWay}" />
            <controls:SciProgressBar Width="30"
                                     Margin="20,40,0,0"
                                     HorizontalAlignment="Left"
                                     Orientation="Vertical"
                                     RectCount="20"
                                     Value="{Binding Panel1Item.Signal, FallbackValue=0}" />
            <controls:SciProgressBar Grid.Column="1"
                                     Width="30"
                                     Margin="0,40,20,0"
                                     HorizontalAlignment="Right"
                                     Orientation="Vertical"
                                     RectCount="20"
                                     Value="{Binding Panel2Item.Signal, FallbackValue=0}" />
            <controls:BalanceCircle Width="330"
                                    Height="310"
                                    Margin="0,0,40,0"
                                    HorizontalAlignment="Right"
                                    VerticalAlignment="Bottom"
                                    FontSize="16"
                                    MaxQualifiedRadius="{Binding Rotor.Panel1MaxValue, Mode=OneWay, FallbackValue=30}"
                                    PolarAngle="{Binding Panel1Item.Angle, Mode=OneWay, FallbackValue=0}"
                                    PolarRadius="{Binding Panel1Item.Value, Mode=OneWay, FallbackValue=0}" />
            <controls:BalanceCircle Grid.Column="1"
                                    Width="330"
                                    Height="310"
                                    Margin="40,0,0,0"
                                    HorizontalAlignment="Left"
                                    VerticalAlignment="Bottom"
                                    FontSize="16"
                                    MaxQualifiedRadius="{Binding Rotor.Panel2MaxValue, Mode=OneWay, FallbackValue=30}"
                                    PolarAngle="{Binding Panel2Item.Angle, Mode=OneWay, FallbackValue=0}"
                                    PolarRadius="{Binding Panel2Item.Value, Mode=OneWay, FallbackValue=0}" />

            <Border Grid.Row="1"
                    Height="250"
                    Margin="0,30,20,0"
                    VerticalAlignment="Top"
                    Background="{StaticResource RegionBd}">
                <Grid Margin="30,20">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="0.5*" />
                        <RowDefinition />
                        <RowDefinition />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="0.7*" />
                        <ColumnDefinition />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>

                    <TextBlock VerticalAlignment="Center"
                               Effect="{StaticResource MainEffect}"
                               FontSize="18"
                               FontWeight="Bold"
                               Foreground="White">
                        <Run FontFamily="{StaticResource IconFont}" Text="&#xe614;" />
                        <Run Text="平面1" />
                    </TextBlock>
                    <TextBlock Grid.Column="1"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"
                               FontSize="18"
                               Foreground="{StaticResource MainBrush}">
                        <Run Text="量值" />
                        <Run Text="[g]" />
                    </TextBlock>
                    <TextBlock Grid.Column="2"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"
                               FontSize="18"
                               Foreground="{StaticResource MainBrush}">
                        <Run Text="角度" />
                        <Run Text="[°]" />
                    </TextBlock>

                    <Border Grid.Row="1"
                            Grid.ColumnSpan="3"
                            Margin="0,5"
                            Background="{StaticResource DataRowBd}"
                            CornerRadius="10" />
                    <TextBlock Grid.Row="1"
                               Margin="20,0"
                               VerticalAlignment="Center"
                               FontSize="18"
                               Foreground="{StaticResource MainBrush}"
                               Text="当前值" />
                    <controls:GrowText Grid.Row="1"
                                       Grid.Column="1"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center"
                                       Text="{Binding Panel1Item.Value, FallbackValue=0.0000, Converter={StaticResource FloatDigitConverter}}" />
                    <controls:GrowText Grid.Row="1"
                                       Grid.Column="2"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center"
                                       Text="{Binding Panel1Item.Angle, FallbackValue=0.0000, Converter={StaticResource FloatDigitConverter}}" />

                    <Border Grid.Row="2"
                            Grid.ColumnSpan="3"
                            Margin="0,5"
                            Background="{StaticResource DataRowBd}"
                            CornerRadius="10" />
                    <TextBlock Grid.Row="2"
                               Margin="20,0"
                               VerticalAlignment="Center"
                               FontSize="18"
                               Foreground="{StaticResource MainBrush}"
                               Text="上一次" />
                    <controls:GrowText Grid.Row="2"
                                       Grid.Column="1"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center"
                                       Text="{Binding Panel1Item.LastValue, FallbackValue=0.0000, Converter={StaticResource FloatDigitConverter}}" />
                    <controls:GrowText Grid.Row="2"
                                       Grid.Column="2"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center"
                                       Text="{Binding Panel1Item.LastAngle, FallbackValue=0.0000, Converter={StaticResource FloatDigitConverter}}" />
                </Grid>
            </Border>

