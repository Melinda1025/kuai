                    Grid.Column="1"
                    Height="250"
                    Margin="20,30,0,0"
                    VerticalAlignment="Top"
                    Background="{StaticResource RegionBd}">
                <Grid Margin="30,20">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="0.5*" />
                        <RowDefinition />
                        <RowDefinition />
                    </Grid.RowDefinitions>
